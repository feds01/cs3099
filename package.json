{
    "name": "iamus-api",
    "version": "1.0.0",
    "description": "Iamus REST API. CS3099 Project sources.",
    "main": "dist/src/server.js",
    "scripts": {
        "build": "tsc",
        "start": "tsc & node .",
        "start:all": "(yarn start &) && cd frontend && (yarn start &)",
        "dev": "ts-node-dev  --respawn --trace-warnings --  ./src/server.ts",
        "test": "jest --ci",
        "test:coverage": "jest --collect-coverage --ci",
        "lint": "eslint src/*/**.ts frontend/src/*/**.ts",
        "tcheck": "tsc --noEmit",
        "fmt": "prettier --write src/**/*.ts src/**/**/*.ts frontend/src/**/*.ts __tests__/**/*.ts __tests__/**/**/*.ts",
        "generate-client": "orval",
        "transform-yaml": "yaml2json swagger.yaml > swagger.json"
    },
    "repository": {
        "type": "git",
        "url": "git@gitlab.cs.st-andrews.ac.uk:cs3099group06/project-code.git"
    },
