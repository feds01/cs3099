        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.1",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.3.1",
        "mongodb-memory-server": "^7.5.1",
        "prettier": "^2.4.1",
        "supertest": "^6.1.6",
        "swagger-jsdoc": "^6.1.0",
